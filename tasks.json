{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flex",
            "type": "shell",
            "command": "Flex_Bison/bin/flex",
            "args": [
                "-o",
                "Gramaticas/lex.yy.c",
                "Gramaticas/lexer.l"
            ],
            "group": "build"
        },
        {
            "label": "Bison",
            "type": "shell",
            "command": "bison",
            "args": [
                "-o",
                "parser.tab.c",
                "-d",
                "parser.y"
            ],
            "group": "build"
        },
        {
            "label": "Compile",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "compilador",
                "lex.yy.c",
                "parser.tab.c"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
